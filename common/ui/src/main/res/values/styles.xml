<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldWhiteTextStyle" parent="BaseTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenTextStyle" parent="BaseTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <style name="BoldGrayTextStyle" parent="BaseTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="GrayTextStyle" parent="BaseTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="HintTextStyle" parent="BaseTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">>@color/text_hint</item>
    </style>

    <style name="SmallBoldWhiteTextStyle" parent="BoldWhiteTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumBoldWhiteTextStyle" parent="BoldWhiteTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LargeBoldWhiteTextStyle" parent="BoldWhiteTextStyle">
        <item name="android:textSize">22sp</item>
    </style>


    <style name="SearchEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_small</item>
        <item name="android:background">@drawable/bound_background_other</item>
        <item name="android:drawableStart">@drawable/baseline_search_24</item>
        <item name="android:hint">@string/search_hint_text_home_fragment</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/material_padding_small</item>
        <item name="android:textAppearance">@style/HintTextStyle</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bound_background_other</item>
        <item name="android:src">@drawable/baseline_toc_24</item>
        <item name="android:padding">@dimen/material_padding_small</item>
    </style>

    <style name="OfferButtonStyle">
        <item name="android:background">@null</item>
        <item name="android:layout_margin">@dimen/material_margin_small</item>
    </style>

    <style name="ImageCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox_selector</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
