<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseSmallTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="BaseMediumTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name = "BaseButtonStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GreenTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_accent_green</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="BlueTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_accent_blue</item>
    </style>

    <style name="BoldGrayTextStyle" parent="BaseMediumTextStyle">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="GrayTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="HintTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="SmallBoldWhiteTextStyle" parent="BaseMediumTextStyle">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="MediumBoldWhiteTextStyle" parent="BaseMediumTextStyle">
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="LargeBoldWhiteTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>

    <style name="SmallWhiteTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="MediumWhiteTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="LargeWhiteTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>


    <style name="SearchEditTextStyle">
        <item name="android:hint">@string/search_hint_text_home_fragment</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/material_padding_small</item>
        <item name="android:textAppearance">@style/HintTextStyle</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bound_background_other</item>
        <item name="android:src">@drawable/baseline_toc_24</item>
        <item name="android:padding">@dimen/material_padding_small</item>
    </style>

    <style name="OfferButtonStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_accent_green</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ImageCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/icon_like</item>
    </style>

    <style name="RoundedButtonStyle">
        <item name="backgroundTint">@color/button_home_primary</item>
        <item name="shapeAppearance">@style/RoundedShape</item>
    </style>

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedButtonStyleVacancy">
        <item name="backgroundTint">@color/button_vacancy_card_primary</item>
        <item name="shapeAppearance">@style/RoundedShape</item>
    </style>

    <style name="RoundedVacancyShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>

</resources>
